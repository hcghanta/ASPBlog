@page
@using ASPBlog.Models
@model ASPBlog.Pages.CreateModel
@*@model Blog*@
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Blog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Blog.Title" class="control-label"></label>
                <input asp-for="Blog.Title" class="form-control" />
                <span asp-validation-for="Blog.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.Description" class="control-label"></label>
                <input asp-for="Blog.Description" class="form-control" />
                <span asp-validation-for="Blog.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.Author" class="control-label"></label>
                <input asp-for="Blog.Author" class="form-control" />
                <span asp-validation-for="Blog.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.PublisedDate" class="control-label"></label>
                <input asp-for="Blog.PublisedDate" class="form-control" />
                <span asp-validation-for="Blog.PublisedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.Category" class="control-label"></label>
                <p>
                    @Html.DropDownListFor(m => m.Blog.Category,
                                                         new SelectList(Enum.GetValues(typeof(Category))),
                                                         "Select Category")
                </p>
                @*<input asp-for="Blog.Category" class="form-control" />*@
                <span asp-validation-for="Blog.Category" class="text-danger"></span>
</div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
